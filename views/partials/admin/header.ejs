<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - ASTS Admin' : 'ASTS Admin Paneli' %></title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/css/all.min.css">
    <!-- Admin Stil Dosyası -->
    <link rel="stylesheet" href="/css/admin.css">
    <!-- Favicon -->
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/css/all.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <% if (locals.admin) { %>
            <%- include('../partials/admin/sidebar') %>
        <% } %>
        
        <!-- Ana içerik alanı -->
        <div class="content-wrapper">
            <!-- Üst menü -->
            <% if (locals.admin) { %>
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                    <div class="container-fluid">
                        <button type="button" id="sidebarCollapse" class="btn btn-info">
                            <i class="fas fa-bars"></i>
                        </button>
                        <div class="ms-auto d-flex">
                            <div class="navbar-text text-white me-3">
                                <i class="fas fa-user-circle me-1"></i> <%= locals.admin.name %> <%= locals.admin.surname %>
                            </div>
                            <a href="/auth/logout" class="btn btn-outline-light btn-sm">
                                <i class="fas fa-sign-out-alt me-1"></i> Çıkış
                            </a>
                        </div>
                    </div>
                </nav>
            <% } %>
            
            <!-- Ana içerik konteyneri -->
            <div class="container-fluid p-4">